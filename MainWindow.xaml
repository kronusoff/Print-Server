<Window x:Class="Print_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Server" Height="450" Width="800">
    <Grid>
        <!-- Элементы интерфейса -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <!-- Кнопки с отступами между ними -->
            <Button Content="Add Printer" Click="AddPrinter_Click"/>
            <Button Content="Delete the printer
" Click="RemovePrinter_Click" Margin="10,0,10,0"/>
            <Button Content="Settings" Click="Settings_Click"/>
        </StackPanel>
        <!-- Список принтеров -->
        <ListBox x:Name="PrintersListBox" Grid.Row="1" Margin="10" Background="#ECEFF1" BorderThickness="1" BorderBrush="#B0BEC5" MouseDoubleClick="PrintersListBox_MouseDoubleClick">
            <!-- Элементы списка -->
        </ListBox>
    </Grid>
</Window>
