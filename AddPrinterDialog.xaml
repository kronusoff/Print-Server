<Window x:Class="Print_Server.AddPrinterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add a printer
" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Select a printer:
" Grid.Row="0"/>
        <ComboBox x:Name="PrintersComboBox" Grid.Row="1" Margin="0,5,0,10"/>
        <Button Content="Add" Grid.Row="2" Margin="0,5,0,0" Click="AddPrinterButton_Click"/>
        <Button Content="Cancel" Grid.Row="3" Margin="0,5,0,0" Click="CancelButton_Click"/>
    </Grid>
</Window>
